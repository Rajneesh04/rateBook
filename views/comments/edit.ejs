<%- include('../partials/header') %>


<div class="row">
    <h1 style="text-align: center; margin: 30px auto;">Edit comment</h1>
    <div style="width:30%; margin:0 auto">
        <form action="/books/<%= book_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment"  value="<%= comment.text%>">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
            </div> 
        </form>
        <a href="/books/<%= book_id %>">Back</a>
    </div>    
</div>


<%- include('../partials/footer') %>