<%- include('../partials/header') %>


<div class="row">
    <h1 style="text-align: center; margin: 30px auto;">Edit book</h1>
    <div style="width:30%; margin:0 auto">
        <form action="/books/<%= book._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="book[name]" value="<%= book.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="book[image]" alt="image url" value="<%= book.image%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="book[description]" value="<%= book.description%>">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
            </div> 
        </form>
        <a href="/books">Back</a>
    </div>
    
</div>



<%- include('../partials/footer') %>