<%- include('../partials/header') %>


<div class="row">
    <h1 style="text-align: center; margin: 30px auto;">Add comment to <%= book.name%></h1>
    <div style="width:30%; margin:0 auto">
        <form action="/books/<%= book._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment"  placeholder="Comment here">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
            </div> 
        </form>
        <a href="/books/<%= book._id %>">Back</a>
    </div> 
</div>


<%- include('../partials/footer') %>